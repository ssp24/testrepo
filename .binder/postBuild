#!/bin/bash

# Create the Jupyter config directory if it doesn't exist
mkdir -p $HOME/.jupyter/

# Move the jupyter_notebook_config.py file to the correct location
mv $HOME/binder/jupyter_notebook_config.py $HOME/.jupyter/

# Make sure the config file has the correct permissions
chmod 644 $HOME/.jupyter/jupyter_notebook_config.py

# Ensure welcome.md exists
echo "# Welcome to My Binder Project" > welcome.md
